        box-shadow: 0 0 25px rgba(6, 255, 255, 0.6);
    }

    .cta-primary:hover {
        transform: translateY(-3px);
        box-shadow: 0 0 40px rgba(6, 255, 255, 0.9);
    }

    /* ===============================
   üì± MOBILE
================================ */
    @media (max-width: 768px) {
        .cta-section {

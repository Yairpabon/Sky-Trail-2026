<style>
    /* ===============================
   üé® VARIABLES
================================ */
    :root {
        --accent: #06ffff;
        --dark: #000;
        --light: #fff;
    }

    /* ===============================
   üåÑ SECCI√ìN
================================ */
    .kit-section {
        position: relative;
        padding: 140px 80px;
        background-image: url("../assets/FondoDeEjemplo.jpg");
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
    }

    .kit-overlay {
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.75);
        z-index: 1;
    }

    /* ===============================
   üì¶ CONTENEDOR
================================ */
    .kit-container {
        position: relative;
        z-index: 2;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 60px;
        max-width: 1200px;
        margin: auto;
    }

    /* ===============================
   üßæ TARJETAS
================================ */
    .kit-card {
        border: 2px solid var(--light);
        padding: 50px;
        color: var(--light);
        background: rgba(0, 0, 0, 0.4);
        backdrop-filter: blur(6px);
        opacity: 0;
        transform: translateY(60px);
        animation: fadeUp 0.9s ease forwards;
    }

    .kit-card.vip {
        border-color: var(--accent);
        box-shadow: 0 0 40px rgba(6, 255, 255, 0.25);
        animation-delay: 0.2s;
    }

    /* ===============================
   üè∑Ô∏è T√çTULO
================================ */
    .kit-card h3 {
        font-size: 1.4rem;
        letter-spacing: 2px;
        text-transform: uppercase;
        margin-bottom: 20px;
    }

    /* ===============================
   üí∞ PRECIO
================================ */
    .price {
        display: flex;
        align-items: baseline;
        gap: 6px;
        margin-bottom: 30px;
    }

    .price .currency {
        font-size: 1.2rem;
    }

    .price .amount {
        font-size: 3rem;
        font-weight: 700;
        color: var(--accent);
    }

    .price .label {
        font-size: 0.8rem;
    }

    /* ===============================
   üìã LISTA
================================ */
    .kit-list {
        list-style: none;
        padding: 0;
        margin: 0 0 40px;
        font-family: "Zalando Sans SemiExpanded", sans-serif;
    }

    .kit-list li {
        display: flex;
        align-items: center;
        gap: 16px;
        margin-bottom: 20px;
    }

    .kit-list span {
        font-size: 0.95rem;
    }
    .kit-list img {
        filter: drop-shadow(0 0 6px rgba(6, 255, 255, 0.6));
    }

    .kit-card.vip .kit-list img {
        filter: drop-shadow(0 0 8px rgba(6, 255, 255, 0.9));
    }

    /* ===============================
   üîò BOTONES
================================ */
    .btn {
        width: 100%;
        padding: 14px;
        font-weight: bold;
        letter-spacing: 1px;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        font-family: "Zalando Sans SemiExpanded", sans-serif;
    }

    .basic-btn {
        background: var(--light);
        color: var(--dark);
    }

    .basic-btn:hover {
        background: var(--accent);
    }

    .vip-btn {
        background: var(--accent);
        color: var(--dark);
        box-shadow: 0 0 20px rgba(6, 255, 255, 0.6);
    }

    .vip-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 0 35px rgba(6, 255, 255, 0.9);
    }
    /* ===============================
   üî• CTA SECTION
================================ */
    .cta-section {
        color: #fff;
        padding: 140px 20px;
        position: relative;
        z-index: 2;
        font-family: "Zalando Sans SemiExpanded", sans-serif;
    }

    /* l√≠nea decorativa superior */
    .cta-section::before {
        content: "";
        position: absolute;
        top: 20;
        left: 50%;
        width: 120px;
        height: 3px;
        background: #06ffff;
        transform: translateX(-50%);
    }

    /* contenedor */
    .cta-container {
        max-width: 900px;
        margin: 0 auto;
        text-align: center;
    }

    /* Texto principal */
    .cta-intro {
        font-size: 1.5rem;
        font-weight: 600;
        line-height: 1.6;
        margin-bottom: 32px;
        color: #ffffff;
    }

    /* Texto descriptivo */
    .cta-text {
        font-size: 1.05rem;
        line-height: 1.8;
        opacity: 0.9;
        margin-bottom: 45px;
    }

    /* Frase fuerte */
    .cta-highlight {
        font-size: 1.15rem;
        font-weight: 800;
        letter-spacing: 1.2px;
        color: #06ffff;
        margin-bottom: 55px;
    }

    /* Botones */
    .cta-actions {
        display: flex;
        justify-content: center;
        gap: 22px;
        flex-wrap: wrap;
    }


        }

        .cta-intro {
            font-size: 1.25rem;
        }

        .cta-highlight {
            font-size: 1rem;
        }
    }

    /* ===============================
   ‚ú® ANIMACI√ìN
================================ */
    @keyframes fadeUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* ===============================
   üì± MOBILE
================================ */
    @media (max-width: 768px) {
        .kit-section {
            padding: 100px 20px;
            background-attachment: scroll;
        }

        .kit-container {
            grid-template-columns: 1fr;
        }

        .kit-card.vip {
            order: 1;
        }

        .kit-card.basic {
            order: 2;
        }
    }
</style>

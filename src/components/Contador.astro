---
const { fecha } = Astro.props;
const videoSource = "../public/videos/Completo.mp4";
import { Image } from "astro:assets";
import Fondo from "../assets/FondoDeEjemplo.jpg";
---

<section class="countdown-section">
    <video
        autoplay
        muted
        loop
        playsinline
        webkit-playsinline
        preload="auto"
        class="video-background"
    >
        <source src={videoSource} type="video/mp4" />

        Tu navegador no soporta videos.
    </video>

    <div class="overlay"></div>

    <div class="container">
        <div class="typewriter">
            <span class="title">Santa Marta</span>
            <span class="date"> 26 de Abril de 2026</span>
        </div>

        <div class="countdown-container" id="cuenta-atras" data-fecha={fecha}>
            <div class="time-block">
                <span class="number" id="days">00</span>
                <span class="label">D√çAS</span>
            </div>
            <div class="time-block">
                <span class="number" id="hours">00</span>
                <span class="label">HORAS</span>
            </div>
            <div class="time-block">
                <span class="number" id="minutes">00</span>
                <span class="label">MINUTOS</span>
            </div>
            <div class="time-block">
                <span class="number" id="seconds">00</span>
                <span class="label">SEGUNDOS</span>
            </div>
        </div>

        <button class="btn-signup"> INSCR√çBETE AQU√ç </button>
    </div>
</section>
<script src="/src/scripts/contador.js" defer></script>

<style>
    @import url("https://fonts.googleapis.com/css2?family=Zalando+Sans+SemiExpanded:ital,wght@0,200..900;1,200..900&display=swap");
    .countdown-section {
        position: relative;
        height: 500px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        text-align: center;
        overflow: hidden;
        background-color: black;
    }

    /* ESTILO DEL VIDEO PARA QUE CUBRA TODO EL FONDO */
    .video-background {
        position: absolute;
        top: 50%;
        left: 50%;
        min-width: 100%;
        min-height: 100%;
        width: 100%;
        height: 100%;
        z-index: 0;
        transform: translate(-50%, -50%);
        object-fit: cover; /* Esto hace que se comporte como background-size: cover */
        pointer-events: none;
    }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5); /* Ajusta la opacidad seg√∫n necesites */
        z-index: 1;
        inset: 0;
    }

    .container {
        position: relative;
        z-index: 2;
    }

    /* TEXTO MAQUINA DE ESCRIBIR */
    .typewriter {
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.7rem;
        margin: 2rem;
    }

    .title {
        font-family: "Zalando Sans SemiExpanded", sans-serif;
        font-weight: bold;
        letter-spacing: 4px;

        /* üëá TEXTO M√ÅS GRANDE */
        font-size: clamp(2.4rem, 3vw, 3.4rem);
        display: inline-block;
        white-space: nowrap;
        overflow: hidden;

        /* Degradado Colombia  */
        background: white;

        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;

        border-right: 4px solid rgba(255, 255, 255, 0.7);

        /* üëá AJUSTADO AL TEXTO REAL */
        width: 20ch;

        animation:
            typing 5s steps(20) forwards,
            blink 0.6s step-end 6,
            fadeCursor 0.8s ease forwards;

        animation-delay: 0s, 0s, 4s; /* üëà cuando termina de escribir */
    }

    /* FECHA */
    .date {
        font-family: monospace;
        font-size: clamp(0.9rem, 4vw, 2.1rem);
        color: #ddd;
        opacity: 0;
        animation: fadeIn 1s ease forwards;
        animation-delay: 2s;
    }

    /* ANIMACIONES DEL LA MAQUINA DE ESCRIBIR */
    @keyframes typing {
        from {
            width: 0;
        }
        to {
            width: 24ch;
        }
    }

    @keyframes blink {
        50% {
            border-color: transparent;
        }
    }

    @keyframes fadeIn {
        to {
            opacity: 1;
        }
    }
    @keyframes fadeCursor {
        to {
            border-right-color: transparent;
        }
    }

    @keyframes typing {
        from {
            width: 0;
        }
        to {
            width: 24ch;
        }
    }

    @keyframes blink {
        50% {
            border-right-color: transparent;
        }
    }

    /*ESTILOS DEL CONTADOR */

    .countdown-container {
        display: flex;
        gap: 40px;
        justify-content: center;
        margin-bottom: 40px;
        z-index: 2;
    }

    .time-block {
        display: flex;
        flex-direction: column; /* Esto pone el texto debajo del n√∫mero */
        align-items: center; /* Centra ambos elementos horizontalmente */
        min-width: 80px; /* Evita que los bloques se muevan cuando cambian los n√∫meros */
    }

    .number {
        font-size: 4rem;
        font-weight: 900;
        color: #42dad9; /* CAMBIA EL COLOR DE LA LETRAS DEL CONTADOR */
        font-family: "Impact", "Arial Black", sans-serif;
        line-height: 1; /* Elimina espacio extra arriba y abajo del n√∫mero */
        margin: 0;
    }

    .label {
        font-size: 0.8rem;
        margin-top: 5px; /* Espacio peque√±o entre el n√∫mero y la palabra */
        letter-spacing: 2px;
        font-weight: bold;
        text-transform: uppercase;
        color: white;
        opacity: 0.9;
    }

    /* ESTILO DEL BOT√ìN (Ajustado) */
    .btn-signup {
        background: white;
        color: black;
        border: none;
        padding: 15px 40px;
        font-weight: 900;
        font-size: 1.1rem;
        cursor: pointer;
        border-radius: 4px;
        text-transform: uppercase;
        transition: 0.3s;
    }

    .btn-signup:hover {
        background: white;
        transform: scale(1.05);
    }

    @media (max-width: 768px) {
        .countdown-section {
            height: auto;
            display: flex;
            padding: 70px 20px;
        }

        .label {
        }
        .countdown-container {
            gap: 5px;
            flex-wrap: wrap;
        }
        .number {
            font-size: 2.5rem;
        }
    }
</style>
